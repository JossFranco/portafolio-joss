---
import workExperiences from './workExperiences';

interface Props {
  company: string;
  companyLogo: string;
  positionInTheCompany: string;
  startDate?: Date;
  endDate?: Date;
  isCurrentCompany?: boolean;
  description: string;

}
const {
  company,
  companyLogo,
  positionInTheCompany,
  startDate,
  endDate,
  isCurrentCompany = false,
  description,

} = Astro.props;
---

<div class="flex flex-col md:flex-row md:items-center gap-4 md:gap-6 p-4 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
  <img src={companyLogo} alt={`${company} logo`} class="w-16 h-16 object-contain" />
  <div class="flex flex-col">
    <h3 class="text-xl font-semibold text-gray-800 dark:text-white">{positionInTheCompany}</h3>
    <p class="text-gray-600 dark:text-gray-300">{company}</p>
    <p class="text-gray-500 dark:text-gray-400 text-sm">
      {startDate ? startDate : ''} - {isCurrentCompany ? 'Present' : endDate ? endDate : ''}
    </p>
    <p class="mt-2 text-gray-700 dark:text-gray-300">{description}</p>
  </div>



